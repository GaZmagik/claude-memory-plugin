{
  "compilerOptions": {
    "target": "ES2022",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./lib",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["skills/memory/src/core/*"],
      "@types/*": ["skills/memory/src/types/*"],
      "@graph/*": ["skills/memory/src/graph/*"],
      "@search/*": ["skills/memory/src/search/*"],
      "@quality/*": ["skills/memory/src/quality/*"],
      "@scope/*": ["skills/memory/src/scope/*"]
    }
  },
  "include": [
    "skills/**/*.ts",
    "hooks/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist"
  ]
}
